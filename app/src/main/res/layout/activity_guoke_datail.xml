<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:Float="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coord"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <View
        android:id="@+id/share_top_img"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:transitionName="share_img"
        />
    <android.support.design.widget.FloatingActionButton
    android:id="@+id/share_id"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:layout_marginTop="10dp"
    android:src="@drawable/share"
    android:layout_gravity="right|top"
    android:layout_marginRight="30dp"
    Float:borderWidth="0dp"
    Float:rippleColor="#049b9a97"
    Float:elevation="0.1dp"
    Float:pressedTranslationZ="16dp"
    android:backgroundTint="?android:attr/colorControlNormal"
    Float:layout_behavior="com.example.tangzhifeng.paperairplane.detailedpager.guoke.GuokeDetailScrollFloat"
    />
    <android.support.design.widget.FloatingActionButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/floatingActionButton_back"
        android:layout_gravity="left|top"
        android:src="@drawable/back"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        Float:borderWidth="0dp"
        Float:rippleColor="#049b9a97"
        Float:elevation="0.1dp"
        Float:pressedTranslationZ="16dp"
        android:backgroundTint="?android:attr/colorControlNormal"
        Float:layout_behavior="com.example.tangzhifeng.paperairplane.detailedpager.guoke.GuokeDetailScrollFloat"
        />

    <ScrollView
    android:id="@+id/scrollView_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/activity_guoke_datail"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tangzhifeng.paperairplane.detailedpager.guoke.GuokeDetailActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></WebView>
    <ProgressBar
        android:id="@+id/ProgressBar_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminateDrawable="@drawable/progressbar_color"
        android:visibility="gone"
        />
</LinearLayout>
</ScrollView>

</android.support.design.widget.CoordinatorLayout>