<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:id="@+id/main_guoke_item"
                android:background="#ffff"
              android:layout_height="150dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_centerVertical="true"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_item_guoke"
            android:transitionName="share_img"
            android:paddingLeft="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:text="这是测试的信息，暂时的，不要过多关注"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:textAllCaps="false"
            android:textSize="17sp"
            android:id="@+id/Content_item_guoke"
            android:layout_marginTop="14dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/head_icon"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            fresco:roundedCornerRadius="30dp"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            />

        <TextView
            android:id="@+id/group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textSize="8sp"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:id="@+id/auther_id"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="8sp"
            android:text="By：wkl"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView

            android:layout_marginRight="50dp"
            android:layout_alignParentRight="true"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/collect_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="8"
            android:maxLines="1"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="42dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/liking_count"
            />
        <ImageView

            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"

            android:layout_width="13dp"
            android:layout_height="13dp"

            android:src="@drawable/coment_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="8sp"
            android:text="3"
            android:maxLines="1"
            android:layout_marginBottom="7dp"
            android:layout_marginRight="13dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/comment_count"
            />
    </RelativeLayout>
</RelativeLayout>
